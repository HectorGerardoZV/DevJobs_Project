<main class="lista-candidatos">
    <h1>Candidatos</h1>
    {{#if candidatos.length}}
       {{#each candidatos}}
        <div class="candidato">
            <div class="caja">
                <p class="etiqueta">Nombre:</p>
                <p class="nombre">{{nombre}}</p>
            </div>
            <div class="caja">
                <p class="etiqueta">E-Mail:</p>
                <p class="nombre">{{email}}</p>
            </div>
            <div class="caja">
                <a target="_blank" href="/uploads/cv/{{cv}}"  class="btn btn-verde">Ver CV</a>
            </div>
        </div>
       {{/each}}
    {{else}}
        <p>No hay candidatos :(</p>
    {{/if}}
</main>