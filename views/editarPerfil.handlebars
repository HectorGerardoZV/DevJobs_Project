<main class="contenedor">
    <form action="/editarPerfil" method="post" class="default-form">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="nombre" placeholder="Tu nombre" value="{{usuario.nombre}}">
        </div>
        <div class="campo">
            <label for="">E-Mail</label>
            <input type="text" name="email" placeholder="Tu correo electronico" value="{{usuario.email}}">
        </div>
        <div class="campo">
            <label for="">Contraseña actual</label>
            <input type="text" name="passwordNow" placeholder="Tu contraseña">
        </div>
        <div class="campo">
            <label for="">Contraseña nueva</label>
            <input type="text" name="password" placeholder="Tu contraseña">
        </div>
        <div class="campo">
            <label for="">Repetir contraseña nueva</label>
            <input type="text" name="passwordNew" placeholder="Tu contraseña">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>