<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informaci贸n general</h3>

        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" name="titulo" placeholder="Titulo vacante" value="{{vacante.titulo}}">
        </div>
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa vacante"  value="{{vacante.empresa}}">
        </div>
        <div class="campo">
            <label for="">Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ubicaci贸n vacante"  value="{{vacante.ubicacion}}">
        </div>
        <div class="campo">
            <label for="">Salario (USD)</label>
            <input type="number" name="salario" placeholder="Salavio vacante" min="0"  value="{{vacante.salario}}">
        </div>
        <div class="campo">
            <label for="">Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disable selected>-- Selecciona --</option>
                    <option value="Freelancer">Freelancer</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
                
            </select>
        </div>

        <h3>Descripci贸n del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripci贸n del puesto</label>
            <input type="hidden" id="x"  value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input = "x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>

</main>