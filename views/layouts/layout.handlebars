<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/trix.css">
    <link rel="stylesheet" href="/css/app.css">
    <title>{{namePage}}</title>
</head>
<body>
    <div class="nombre-sitio contenedor">
        <h1><a href="/">DevJobs</a></h1>
        {{#if barra}}
            <div class="buscador">
                <form action="/buscador" method="post">
                    <input type="text" name="q" class="buscar">
                    <input type="submit" value="Buscar">
                </form>
            </div>
        {{/if}}
        {{#if cerrarSesion}}
            <div class="cerrar-sesion">
                <h4>Hola! {{nombre}}</h4>
                {{#if usuario.imagen}}
                    <img src="/uploads/perfiles/{{usuario.imagen}}" alt="" srcset="" class="imagenPerfil">
                {{/if}}
                <a href="/administracion">Ir a administración</a>
                <a href="/cerrarSesion">Cerrar Sesión</a>
            </div>
        {{/if}}
    </div>

    <header class="site-header contenedor separador">
        <h2>{{namePage}}</h2>
        {{#if tagLine}}
            <p class="tagline">{{tagLine}}</p>
        {{/if}}
       
        {{#if boton}}
            <a href="/vacantes/nueva" class="btn btn-azul">Publicar nueva vacante</a>
        {{/if}}
    </header>


    <div class="contenido-principal contenedor">
        {{#if mensajes}}
            <div class="alertas">
                {{#mostrarAlertas mensajes}}
                {{/mostrarAlertas}}
            </div>
        {{/if}}
        {{{body}}}
    </div>

    <script src="/js/trix.js"></script>
    <script src="/dist/bundle.js"></script>
    
</body>
</html>